.zi-footnote
  color #666
  transition all .2s ease

  &:hover
    text-decoration underline dashed
    color black

    .zi-footnote-icon
      border-color black
      fill black

.zi-footnote-icon
  width 14px
  height 14px
  margin-left 4px
  margin-right 5px
  color inherit
  border 1px solid #999
  border-radius 50%
  transition all .1s ease
  line-height inherit
  display inline-flex
  align-items center
  vertical-align text-bottom
