.zi-subtitle, .zi-subheading
  font-size rem(14)
  color #999

.zi-comment
  font-size rem(12)
  color #999

.zi-title
  font-size rem(13)
  color #888
  text-transform uppercase
  margin-bottom rem(15)
  font-weight 400
  cursor default
  letter-spacing 1.3px

.zi-caption
  color #999
  font-size rem(12)
  line-height 2
  margin rem(14) 0 rem(40) 0
  text-align center
