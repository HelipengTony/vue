.zi-link
  display inline-flex
  align-items center
  color #0076ff

  svg
    margin-left 7px
    color inherit
    min-height 15px

  &:hover
    .more
      padding-left 8px

  &.no-decoration
    text-decoration none

  &.bold
    font-weight 700

.zi-link-more
  padding-left 5px
  transition padding-left .2s ease
  font-weight inherit
  min-height 15px
