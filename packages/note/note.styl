.zi-note
  padding rem(16) rem(24)
  font-size rem(14)
  line-height 1.8
  border 1px solid #ddd
  background-color white
  border-radius 4px

  >.zi-note-type
    text-transform uppercase
    font-weight 500

  &.hint, &.success
    border-color $STATUS_SUCCESS
    >.zi-note-type
      color $STATUS_SUCCESS

  &.alert, &.warning
    border-color $STATUS_WARNING
    >.zi-note-type
      color $STATUS_WARNING

  &.error, &.danger
    border-color $STATUS_DANGER
    >.zi-note-type
      color $STATUS_DANGER

.zi-dark-theme
  .zi-note
    background-color black
    color #eaeaea

  .zi-note-type
    color #eaeaea
