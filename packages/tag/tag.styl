.zi-tag
  display inline-block
  line-height rem(24)
  height rem(24)
  font-size rem(12)
  border-radius 5px
  border 1px solid var(--accents-2)
  font-weight 500
  background-color var(--accents-1)
  padding 0 rem(8)

  &.success
    color var(--geist-success)

  &.warning
    color var(--geist-warning)

  &.error, &.danger
    color var(--geist-error)
