.zi-checkbox-group
  .zi-checkbox-container
    margin-right rem(30)

.zi-checkbox-container
  height rem(14)
  line-height rem(14)
  display inline-flex
  justify-content center
  align-items center
  width auto

  &.disabled
    cursor not-allowed
    .zi-checkbox-label
      cursor not-allowed

  .zi-checkbox-label
    font-size rem(14)
    line-height rem(14)
    padding-left rem(8)
    user-select none
    cursor pointer

  .zi-checkbox-original
    opacity 0
    outline none
    position absolute
    width 0
    height 0
    margin 0
    padding 0
    z-index -1
    background-color transparent
