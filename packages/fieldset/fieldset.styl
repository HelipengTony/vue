.zi-fieldset
  background-color var(--geist-background)
  border 1px solid var(--accents-2)
  border-radius 5px
  overflow hidden

.zi-fieldset-content
  background-color var(--geist-background)
  font-size rem(13)
  padding rem(20)

  h1
    font-size rem(20)
  h2, h3, h4, h5, h6, p, span
    font-size rem(13)
  p, div, h1, h2, h3, h4, h5, h6
    margin-top 0
    line-height rem(20)
    margin-bottom rem(14)

.zi-fieldset-footer
  background-color var(--accents-1)
  border-top 1px solid var(--accents-2)
  color var(--accents-6)
  display flex
  justify-content space-between
  align-items center
  font-size rem(12)
  padding rem(15)
  box-sizing border-box

  p, span, div
    font-size rem(12)
    line-height rem(24)
    margin 0


.disabled .zi-fieldset, .disabled .zi-fieldset-content, .disabled .zi-fieldset-footer
  background-color var(--accents-1)
  color var(--accents-3)

  button
    background var(--accents-1) !important
    border-color var(--accents-2) !important
    color #ccc !important
    cursor not-allowed !important


.zi-dark-theme
  .zi-fieldset
    border-color var(--accents-7)

  .zi-fieldset-content
    background-color black

    > div, p, span, h1, h2, h3
      color white

  .zi-fieldset-footer
    background-color #111
    border-color #111
    color #999

    > div, p, span
      color #999


